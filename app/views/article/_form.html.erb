<%= form_for 'article#write' do |form| %>
  <div class="field">
    <div class="uk-margin">
      <%= form.text_field :title, {class: "uk-input", required: 'required'} %>
    </div>
    <div class="uk-margin">
      <%= form.rich_text_area :content, {required: 'required', class: "uk-textarea", style: "min-height: 300px"} %>
    </div>
  </div>
  <div>
    <%= submit_tag "작성", {class: "uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom"} %>
  </div>
<% end %>