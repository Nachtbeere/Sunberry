<%= form_for 'article#write' do |form| %>
  <div class="field">
    <%= form.text_field :title, {required: 'required'} %>
    <%= form.rich_text_area :content, {required: 'required', style: "min-height: 300px"} %>
  </div>
  <div>
    <%= submit_tag "작성", {class: "uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom"} %>
  </div>
<% end %>